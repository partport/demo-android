    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:layout_row="0"
        android:layout_column="2"
        android:background="#157c77" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:id="@+id/imageView3"
